{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": ["es2015", "dom"],
		"module": "amd",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"sourceMap": true,
		"suppressImplicitAnyIndexErrors": true,
		"target": "es5",
		"typeRoots": ["node_modules/@types/"]
	},
	"include": [
		"src/app/components/**/*"
	]
}
